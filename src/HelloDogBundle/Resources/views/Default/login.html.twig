{% extends "::base.html.twig" %}

{% block title "Iniciar Sesión" %}

{% block stylesheets %}
	{{parent()}}
    <link rel="stylesheet" href="{{ asset('bundles/hellodog/dist/css/footer-sticky.css')}}">
{% endblock %}

{% block body %}
	{% embed 'HelloDogBundle:Layout:navbar.html.twig' %}
      {% block navbar %}
        {{ parent() }}
      {% endblock %}
    {% endembed %}

    {# incrustar web de bootic #}
    <div class="video">
  	  <iframe width="100%" height="800" src="http://hellodog.bootic.net/products" frameborder="0" allowfullscreen></iframe>
  	</div>

	<!-- Modal signIN -->
	<div class="modal fade in" id="signup" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true" style="display: block; padding-left: 0px; background-color: rgba(0, 0, 0, 0.95);">
	  	<div class="modal-dialog modal-sm">
		    <div class="modal-content">

		      	<div class="modal-body">
			      	<h6 class="text-center">
			      		<img src="{{ asset('bundles/hellodog/dist/images/hellodog.png') }}" width="220px" height="180px">
		      		</h6>
		      		<hr>
		      		<form action="{{ path('_demo_security_check') }}" method="POST">
					  	<div class="form-group">
					  		
					    	<input type="email" class="form-control" id="username" name="_username" value="{{last_username}}" placeholder="Email">
					  	</div>

					  	<div class="form-group">
					  		
					    	<input type="password" class="form-control" id="password" name="_password" placeholder="Contraseña">
					  	</div>

					  	<a href="{{ path('secured_resend') }}"><small>¿Olvidaste tu contraseña?</small></a>
					  	<h6>¿Posees código?<a href="{{ path('demo_codigo') }}">&nbsp;Ingresa Aquí</a></h6>

					  	{% if error %}
					  		<hr>
							<p class="text-danger"><i class="glyphicon glyphicon-remove"></i>&nbsp;Email y contraseña incorrectos, vuelva a intentar.</p>
						{% endif %}

				      	<div class="modal-footer" style="border-top: 1px solid transparent;">
							<button type="submit" class="btn btn-dark">INGRESAR&nbsp;<i class="glyphicon glyphicon-menu-right"></i></button>
						</div>
		     	 	</form>
		      	</div>
		    </div>
	  	</div>
	</div>
{% endblock %}