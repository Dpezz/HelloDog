{% extends "::base.html.twig" %}

{% block title "Bienvenido" %}

{% block stylesheets %}
	{{parent()}}
    <link rel="stylesheet" href="{{ asset('bundles/hellodog/dist/css/cover.css')}}">
{% endblock %}

{% block body %}
	<div class="site-wrapper">
	  	<div class="site-wrapper-inner">
	        <div class="cover-container">
			 	<div class="inner cover">
					
					<img src="{{ asset('bundles/hellodog/dist/images/hellodog.png') }}" width="50%" height="75%">
					<hr style="border-top: 1px solid transparent;">
					
					<form action="{{ path('check_codigo') }}" method="POST">
						<div class="row">
							<div class="col-md-4 col-sm-4 col-xs-4"></div>
							<div class="col-md-4 col-sm-4 col-xs-4">
								<div class="form-group">
								    <input type="text" class="form-control" name="codigo" placeholder="hDBmI6ea" autofocus required>
							  	</div>
						  	</div>
							<div class="col-md-4 col-sm-4 col-xs-4"></div>
					  	</div>
						 
					  	<p style="color:#ddd;font-size:14px;">Lorem ipsum dolor,consectetur adipiscing elit.<br>
					  	<a href="" data-toggle="modal" data-target="#politicas">Políticas y condiciones de uso.</a>
					  	
					  	</p>
								
						
						<button class="btn btn-dark">INGRESAR&nbsp;<i class="glyphicon glyphicon-menu-right"></i></button>
						<br>
						<h6 class="text-center">¿No tienes código?<a href="{{ path('demo_login') }}">&nbsp;Volver</a></h6>
					</form>
					
					{% if flag == -2 %}
						<p class="text-danger"><i class="glyphicon glyphicon-remove"></i>&nbsp;Código ingresado incorrecto, vuelva a intentar.</p>
					{% endif %}
					
				</div>
			</div>
		</div>
	</div>

	<!-- Modal -->
	<div class="modal fade" id="politicas" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
	  <div class="modal-dialog">
	    <div class="modal-content">
	      <div class="modal-header">
	        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
	        <h4 class="modal-title" id="myModalLabel"><strong>Términos y Condiciones de Uso</strong></h4>
	      </div>
	      <div class="modal-body">
	        {% include 'HelloDogBundle:Default:politicasdeuso.html.twig' %}
			{% block politicas %}
				{{parent()}}
			{% endblock %}	
	      </div>
	      <div class="modal-footer">
	        <button type="button" class="btn btn-default" data-dismiss="modal"><i class="glyphicon glyphicon-remove"></i>&nbsp;Cerrar</button>
	        <button type="button" class="btn btn-dark" data-dismiss="modal"><i class="glyphicon glyphicon-ok"></i>&nbsp;Aceptar</button>
	      </div>
	    </div>
	  </div>
	</div>
{% endblock %}